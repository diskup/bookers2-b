<% book.book_comments.each do |c| %>
  <tr>
    <td>
      <%= link_to user_path(book.user) do %>
        <%= attachment_image_tag(c.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %>
      <% end %>
    </td>
    <td><%= c.comment %></td>
    <% if c.user == current_user %>
    <td>
      <%= link_to 'Destroy', book_book_comment_path(c.book, c), method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
    </td>
    <% end %>
  <% end %>
  </tr>